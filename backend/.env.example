# ─── Server ─────────────────────────────────
NODE_ENV=production
PORT=5000

# ─── Database (Neon PostgreSQL) ─────────────
DATABASE_URL=postgresql://user:password@host/dbname?sslmode=require

# ─── Frontend (Netlify) ─────────────────────
FRONTEND_URL=https://angisoft.co.ke
CORS_ORIGIN=https://angisoft.co.ke,https://www.angisoft.co.ke

# ─── Email (Zoho Mail SMTP) ─────────────────
SMTP_HOST=smtp.zoho.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@angisoft.co.ke
SMTP_PASS=your-smtp-app-password
EMAIL_FROM=info@angisoft.co.ke
EMAIL_SUPPORT=support@angisoft.co.ke
EMAIL_NOREPLY=no-reply@angisoft.co.ke
EMAIL_UPDATES=updates@angisoft.co.ke

# ─── JWT Auth ───────────────────────────────
JWT_SECRET=your-super-secret-jwt-key-min-32-characters
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# ─── Payments (Stripe) ──────────────────────
STRIPE_SECRET=sk_live_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# ─── AI ChatBot (OpenAI or Hugging Face) ────
# Use OpenAI for best results
OPENAI_API_KEY=sk-proj-xxxxx
OPENAI_MODEL=gpt-4.1-mini
OPENAI_ADMIN_API_KEY=sk-admin-xxxxx
# Or use Hugging Face as fallback
HUGGINGFACE_API_KEY=hf_xxxxx

# ─── Storage (S3/R2) ────────────────────────
S3_ENDPOINT=https://s3.amazonaws.com
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_BUCKET=angisoft-uploads
S3_REGION=us-east-1
S3_PUBLIC_BASE_URL=https://your-cdn.com

# ─── Chatbot Admin Notifications ─────────────
CHATBOT_ADMIN_EMAIL=info@angisoft.co.ke

# ─── Admin ──────────────────────────────────
ADMIN_EMAIL=info@angisoft.co.ke
